function create_player()

	player = {
		x = 60,
		y = 60,
		fx = false
	}
	
end

function player_movement()

	if btn(➡️) then
		player.x += 1
		player.fx = false
	end

	if btn(⬅️) then
		player.x -= 1
		player.fx = true
	end

	if btn(⬆️) then
		player.y -= 1
	end

	if btn(⬇️) then
		player.y += 1
	end
	
end	

function draw_player()

	spr(13, player.x, player.y, 1, 1, player.fx)

end
