pico-8 cartridge // http://www.pico-8.com
version 38
__lua__

function _init()
    player = {
        x = 63,
        y = 63,
        fx = false,
        fy = false
    }
end

function _update()
    --player movement--
    if btn(➡️) then
        player.x += 1
        player.fx = false
    end
    if btn(⬅️) then
        player.x -= 1
        player.fx = true
    end
    if btn(⬆️) then
        player.y -= 1
        player.fy = false
    end
    if btn(⬇️) then
        player.y += 1
        player.fy = true
    end
end

function _draw()
    cls(3)

    map()

    spr(1, player.x, player.y, 1, 1, player.fx, player.fy)
end

