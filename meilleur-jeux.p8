pico-8 cartridge // http://www.pico-8.com
version 38
__lua__

function _init()
    player = {
        x = 63,
        y = 63,
        f = false
    }
end

function _update()
    --player movement--
    if btn(➡️) then
        player.x += 1
        player.f = false
    end
    if btn(⬅️) then
        player.x -= 1
        player.f = true
    end
    if (btn(⬆️)) player.y -= 1
    if (btn(⬇️)) player.y += 1
end

function _draw()
    cls()

    map()

    spr(0, player.x, player.y, 1, 1, player.f)
end

